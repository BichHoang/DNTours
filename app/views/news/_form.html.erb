<%= form_with(model: news, local: true) do |form| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :new_name %>
    <%= form.text_field :new_name, id: :news_new_name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %><br>
  </div>

  <% if news.image? %>
    <%= image_tag news.image.thumb.url %>
    <div>
      <%= label_tag :remove_image do %>
        Remove image
        <%= form.check_box :remove_image %>
      <% end %>
    </div>
  <% end %>
</br></br>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :news_date %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :news_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
