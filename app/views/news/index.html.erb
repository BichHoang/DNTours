<%= render "inc/header" %>
        
    <div class="container_a_12">
             

              <div class="bottom-spacing">
                  <!-- Button--> 
                   
                  <div class="float-left">
                      <a href="<%= new_news_path %>" class="button">
                        <span>Thêm News <img src="/assets/images/plus-small.gif" alt="Thêm tin mới"></span>
                      </a>
                  </div>
              
                  <div class="clear"></div>
            </div>


            <div class="grid_a_12">
                <!-- Example table -->
                <div class="module123">
                  <h2 style="text-align: center;"><span>List News</span></h2>
                    <p id="notice"><%= notice %>
                    <div>
                      <form action="">
                        <table>
                          <thead>
                                <tr>
                                    <th style="width:4%; text-align: center;">ID</th>
                                    <th >News name</th>
                                    <th >Image</th>
                                    <th >Date</th>
                                    <th >Url</th>
                                    <th style="width:20%; text-align: center;">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @news.each do |news| %>
                                <tr>
                                    <td class="align-center"><%= news.id %></td>
                                    <td><%= news.new_name %></td>
                                     <% if news.image? %>
    
                                    <td><%= image_tag news.image.thumb.url %></td>
                                    <%else %>
                                        <td><%= news.image %></td>
                                     <% end %>
                                    <td><%= news.date %></td>
                                    <td><%= news.url %></td>
                                    <td align="center">
                                        <a href=""><%= link_to 'Edit', edit_news_path(news) %><img src="/assets/images/pencil.gif" alt="edit" /></a>
                                        
                                      <a href=""><%= link_to "Delete", news, method: :delete, data: {confirm:"Bạn có chắc chắn xóa?"} %>
                                        
                                         <img src="/assets/images/bin.gif" width="16" height="16" alt="delete" /></a>   
                                        
                                    </td>
                                </tr>
                               <% end %>
                            </tbody>
                        </table>
                        </form>
                     </div> <!-- End .module123-table-body -->
                </div> <!-- End .module123 -->
               <div class="pagination123">           
                        <div class="numbers123">
                               <%= paginate @news %>
                        </div> 
                        <div style="clear: both;"></div> 
                     </div>
               </div> <!-- End .grid_12 -->
          


            <div style="clear:both;"></div>
           
<%= render 'inc/footer'%>


