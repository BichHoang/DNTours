<%= render "inc/header" %>
        
    <div class="container_a_12">
             

              <div class="bottom-spacing">
                  <!-- Button--> 
                   
                  <div class="float-left">
                      <a href="<%= new_local_path %>" class="button">
                        <span> Thêm Local <img src="/assets/images/plus-small.gif" alt="Thêm tin mới"></span>
                      </a>
                  </div>
                
                  <div class="clear"></div>
            </div>


            <div class="grid_a_12">
                <!-- Example table -->
                <div class="module123">
                  <h2 style="text-align: center;"><span>List Locals</span></h2>
                    <p id="notice"><%= notice %>
                    <div class="module123-table-body">
                      <form action="">
                        <table id="myTable" class="tablesorter123">
                          <thead>
                                <tr>
                                    <th style="width:4%; text-align: center;">ID</th>
                                    <th>Ten Local</th>
                                    <th style="width:15%; text-align: center;">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                             <% @locals.each do |local| %>
                                <tr>
                                    <td class="align-center"><%= local.id %></td>
                                    <td><%= local.local_name %></td>
                                    <td align="center">
                                        
                                        <a href=""><%= link_to 'Edit', edit_local_path(local) %><img src="/assets/images/pencil.gif" alt="edit" /></a>
                                            
                                        <a href=""><%= link_to "Delete", local, method: :delete, data: {confirm:"Bạn có chắc chắn xóa?"} %>
                                        
                                         <img src="/assets/images/bin.gif" width="16" height="16" alt="delete" /></a>
          
                                        
                                    
                                   
                                    </td>
                                </tr>
                               <% end %>
                            </tbody>
                        </table>
                        </form>
                     </div> <!-- End .module123-table-body -->
                </div> <!-- End .module123 -->
                
               </div> <!-- End .grid_12 -->
          


            <div style="clear:both;"></div>
           
<%= render 'inc/footer'%>





